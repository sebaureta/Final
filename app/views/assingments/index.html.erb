<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<div class="row center">
  <% @assingments.each do |ass| %>
  <div class="col-sm-4 col-md-4">
    <div class="thumbnail">
      <div >
        <%= image_tag ass.task.image.url, class:"img-responsive" if ass.task.image?%>
      </div>
      <div class="caption">
        <h5><%= ass.task.details %></h5>
        <% if ass.completed == true %>
          <p><%= link_to 'La tarea estÃ¡ Completa, presiona para reiniciar', assingment_path(ass), class: 'btn btn-success', method: :patch %> </p>
          <% else %>
          <p><%= link_to 'La tarea estÃ¡ Incompleta, presiona para completarla', assingment_path(ass), class: 'btn btn-danger', method: :patch %> </p>
          <% end %>
      </div>
    </div>

  </div>
  <% end %>
</div>
