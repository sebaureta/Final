<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<a> <%= link_to 'Crear Tarea', new_task_path, class: 'btn btn-primary'%> </a>
<div class="row center">
  <% @tasks.each do |task| %>
  <div class="col-sm-4 col-md-4">
    <div class="thumbnail">
      <a><%= link_to(image_for(task, size: 300)) %></a>
      <div class="caption">
        <h3> <%= task.details %> </h3>
        <p><%= link_to 'Detalles', task_path(task.id), class: 'btn btn-info'%></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
